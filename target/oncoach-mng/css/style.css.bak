@charset "utf-8";

@font-face {
    font-family: "ggm";
    src: url("../fonts/Title_Medium.otf") format("opentype");
    font-weight: normal;
    font-style: normal;
}
@font-face {
    font-family: "ggl";
    src: url("../fonts/Title_Light.otf") format("opentype");
    font-weight: normal;
    font-style: normal;
}

* { word-break:keep-all;-webkit-tap-highlight-color:transparent; }

html, body {

	letter-spacing:0px;
	font-family : 'ggm';
	font-size : 14px;
	line-height : 30px;
	margin : 0 auto;
	color:gray;
	padding : 0 0 0 0;
	height: 100%;
	width:100%;
	



	scrollbar-face-color: #747474; 



	scrollbar-shadow-color: #747474; 



	scrollbar-highlight-color: #747474; 



	scrollbar-3dlight-color: #747474; 



	scrollbar-darkshadow-color: #747474; 



	scrollbar-track-color: #f1f1f1; 



	scrollbar-arrow-color: white;


}



img{
	border:0;
}




a {

	text-decoration : none;
	color:gray;


}

.intro { width:100%;height:100%;position:fixed;top:0px;left:0px;background:url('../img/bg.png') no-repeat;background-size:cover;z-index:1;background-position:center center;padding-top:200px;box-sizing:border-box;text-align:center;color:white;font-family: "ggl";font-size:24px;font-weight:bold;line-height:34px; }
.intro input[type="text"] { margin-top:15px;border:none;text-align:left;color:#5e23aa;font-size:32px;width:548px;height:60px;line-height:60px;padding-left:10px;box-sizing:border-box;background:white;margin-bottom:22px; }
.intro input[type="password"] { border:none;text-align:left;color:#5e23aa;font-size:32px;width:548px;height:60px;line-height:60px;padding-left:10px;box-sizing:border-box;background:white;margin-bottom:22px; }
.intro input[type="text"]::placeholder { color:#5e23aa }
.intro input[type="password"]::placeholder { color:#5e23aa }
footer { width:100%;height:90px;line-height:90px;text-align:center;background:white;position:fixed;bottom:0px;left:0px;z-index:2;font-size:15px;font-family: "ggl";color:#888888; }
footer span { color:#417bff }
.login { width:548px;height:92px;line-height:92px;text-align:center;background:#8c6bb6;color:white;font-size:38px;font-weight:normal;font-family: "ggl";cursor:pointer;margin-bottom:20px;display:inline-block; }
.login:hover { background:#634886 }
.intro a { color:#5846ac;font-size:24px;font-weight:normal;font-family: "ggl";text-decoration:underline; }

.menu { width:780px;height:400px;position:absolute;top:50%;margin-top:-200px;left:50%;margin-left:-390px;padding:20px;box-sizing:border-box; }
.menu_50 { width:50%;float:left;position:relative;height:360px; }

.menu_cell { float:left;height:calc( 50% - 10px );width:calc( 100% - 10px );border-radius:10px;background:white;margin:5px;padding:10px;box-sizing:border-box;text-align:left;padding-left:30px;padding-right:30px; }
.menu_cell h2 { display:inline;color:black;font-size:20px;font-weight:normal;font-family: "ggl";margin:0px;padding:0px; }
.embs { width:100%;height:104px;line-height:104px;text-align:center;position:fixed;left:0px;bottom:160px;z-index:2; }
.embs img { margin-left:15px;margin-right:15px; }
.menu_cell_50 { width:50%;height:auto;text-align:center;color:black;font-family: "ggl";font-size:14px;float:left;line-height:10px;margin-top:10px; }
.icon_a { cursor:pointer;background:white;width:65px;height:65px;border-radius:50%;border:1px solid #d4d4d4;margin:0px auto;overflow:hidden; }
.icon_a img { width:70%;margin-top:10px; }
.icon_a:hover { border:1px solid #417bff; }
.bg_tr { background:rgba(255,255,255,0.6); }
.icon_a_2 { overflow:hidden;cursor:pointer;text-align:center;background:white;width:100px;height:100px;vertical-align:middle;display:inline-block;border-radius:50%;border:1px solid #d4d4d4;margin-right:20px;margin-left:20px; }
.icon_a_2 img { width: 70% ; margin-top:15px; }
.icon_a_2:hover { border:1px solid #417bff; }